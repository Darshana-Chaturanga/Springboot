<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->
    <bean id="superman" class="com.darshana.assignment_01.Superman" scope= "singleton" >
        <constructor-arg value="Ultra" index="0"/>
        <constructor-arg value= "5" index="1"/>
    </bean>

    <bean id="wonder_woman" class="com.darshana.assignment_01.WonderWoman" scope="prototype">
    </bean>

    <bean id="talking_cat" class="com.darshana.assignment_01.TalkingCat" scope="singleton">
    </bean>

</beans>